<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_income_report_wizard_form" model="ir.ui.view">
        <field name="name">Отчёт о доходах: Форма</field>
        <field name="model">investor.income_report.wizard</field>
        <field name="arch" type="xml">
            <form string="Параметры отчёта о доходах">
                <sheet>
                    <group>
                        <group>
                            <field name="investor_id" widget="many2one" readonly="1" groups="investor.group_investor_investor" options="{'no_create': True}"/>
                            <field name="investor_id" widget="many2one" groups="investor.group_investor_broker,investor.group_investor_admin" options="{'no_create': True}"/>
                            <field name="account_id" 
                                   widget="many2one" 
                                   options="{'no_create': True}"
                                   placeholder="Все счета (оставьте пустым)"/>
                        </group>
                        <group>
                            <field name="date_from"/>
                            <field name="date_to"/>
                        </group>
                    </group>
                </sheet>
                <footer>
                    <button string="Сгенерировать отчёт" 
                            name="action_generate_report" 
                            type="object" 
                            class="btn-primary"/>
                    <button string="Отмена" 
                            class="btn-secondary" 
                            special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_income_report_wizard" model="ir.actions.act_window">
        <field name="name">Отчёт о доходах инвестора</field>
        <field name="res_model">investor.income_report.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>

