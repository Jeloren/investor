<odoo>
    <record id="open_transactions" model="ir.actions.server">
        <field name="name">Транзакции инвестора</field>
        <field name="model_id" ref="model_investor_transaction"/>
        <field name="state">code</field>
        <field name="code">action = model.open_account()</field>
        <field name="binding_view_types">kanban</field>
        <field name="binding_model_id" ref="model_investor_transaction"/>
        <field name="groups_id" eval="[(4, ref('investor.group_investor_admin')), (4, ref('investor.group_investor_investor')), (4, ref('investor.group_investor_broker'))]"/>
    </record>
</odoo>