<odoo>
    <record id="view_study_game_form" model="ir.ui.view">
        <field name="name">study.game.form</field>
        <field name="model">study.game</field>
        <field name="arch" type="xml">
            <form js_class="study_form">
                <sheet>
                    <h1>
                        <field name="name"/>
                    </h1>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_study_game" model="ir.actions.act_window">
        <field name="name">Study Game</field>
        <field name="res_model">study.game</field>
        <field name="view_mode">form</field>
        <field name="target">current</field>
    </record>

    <menuitem id="menu_study_game_root" name="Study Game" sequence="10"/>
    <menuitem id="menu_study_game" name="Play" parent="menu_study_game_root" action="action_study_game" sequence="10"/>
</odoo>
